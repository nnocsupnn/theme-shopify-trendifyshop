{% comment %}
  404 Page Template for TrendifyShop
{% endcomment %}

<div class="page-404 section-padding">
  <div class="page-width">
    <div class="page-404__content text-center">
      <h1 class="page-404__title">{{ 'general.404.title' | t }}</h1>
      <p class="page-404__text">{{ 'general.404.subtext' | t }}</p>
      
      <div class="page-404__actions">
        <a href="{{ routes.root_url }}" class="btn btn--primary btn--large">
          {{ 'general.404.link' | t }}
        </a>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn--outline btn--large">
          {{ 'general.search.search' | t }}
        </a>
      </div>
    </div>
  </div>
</div>

<style>
.page-404 {
  min-height: 60vh;
  display: flex;
  align-items: center;
}

.page-404__content {
  max-width: 600px;
  margin: 0 auto;
}

.page-404__title {
  font-size: clamp(3rem, 8vw, 6rem);
  color: var(--color-primary);
  margin-bottom: 1rem;
}

.page-404__text {
  font-size: 1.25rem;
  color: var(--color-base-text-light);
  margin-bottom: 2rem;
}

.page-404__actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
}

@media screen and (max-width: 767px) {
  .page-404__actions {
    flex-direction: column;
    align-items: center;
  }
}
</style>