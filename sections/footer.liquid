{{ 'component-footer.css' | asset_url | stylesheet_tag }}

<footer class="footer section-padding" role="contentinfo">
  <div class="page-width">
    <div class="footer__content">
      <div class="grid grid--4-col footer__blocks">
        <!-- Company Info -->
        <div class="footer__block">
          <h3 class="footer__heading">{{ section.settings.heading_1 | default: 'TrendifyShop' }}</h3>
          <div class="footer__text">
            {{ section.settings.text_1 | default: 'Discover the latest trends in fashion, gadgets, and lifestyle. Your style destination for everything trending.' }}
          </div>
          
          {% if section.settings.show_social %}
            <div class="footer__social">
              {% if settings.social_facebook_url != blank %}
                <a href="{{ settings.social_facebook_url }}" class="footer__social-link" target="_blank" rel="noopener">
                  {% render 'icon-facebook' %}
                  <span class="visually-hidden">Facebook</span>
                </a>
              {% endif %}
              {% if settings.social_instagram_url != blank %}
                <a href="{{ settings.social_instagram_url }}" class="footer__social-link" target="_blank" rel="noopener">
                  {% render 'icon-instagram' %}
                  <span class="visually-hidden">Instagram</span>
                </a>
              {% endif %}
              {% if settings.social_twitter_url != blank %}
                <a href="{{ settings.social_twitter_url }}" class="footer__social-link" target="_blank" rel="noopener">
                  {% render 'icon-twitter' %}
                  <span class="visually-hidden">Twitter</span>
                </a>
              {% endif %}
            </div>
          {% endif %}
        </div>

        <!-- Quick Links -->
        <div class="footer__block">
          <h3 class="footer__heading">{{ section.settings.heading_2 | default: 'Quick Links' }}</h3>
          <ul class="footer__list">
            {% for link in linklists[section.settings.footer_menu_1].links %}
              <li class="footer__list-item">
                <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>

        <!-- Customer Service -->
        <div class="footer__block">
          <h3 class="footer__heading">{{ section.settings.heading_3 | default: 'Customer Service' }}</h3>
          <ul class="footer__list">
            {% for link in linklists[section.settings.footer_menu_2].links %}
              <li class="footer__list-item">
                <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>

        <!-- Newsletter -->
        <div class="footer__block">
          <h3 class="footer__heading">{{ section.settings.heading_4 | default: 'Stay Updated' }}</h3>
          <div class="footer__text">
            {{ section.settings.newsletter_text | default: 'Subscribe to get updates on the latest trends and exclusive offers.' }}
          </div>
          
          {% form 'customer', class: 'footer__newsletter-form' %}
            {% if form.posted_successfully? %}
              <div class="footer__newsletter-success">
                {{ 'general.newsletter_form.confirmation' | t }}
              </div>
            {% else %}
              <div class="footer__newsletter-input-wrapper">
                <input type="email" 
                       name="contact[email]" 
                       placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
                       class="footer__newsletter-input"
                       required>
                <input type="hidden" name="contact[tags]" value="newsletter">
                <button type="submit" class="footer__newsletter-submit btn btn--primary">
                  {{ 'general.newsletter_form.submit' | t }}
                </button>
              </div>
            {% endif %}
            
            {% if form.errors %}
              <div class="footer__newsletter-error">
                {{ form.errors.translated_fields['email'] | capitalize }}
                {{ form.errors.messages['email'] }}
              </div>
            {% endif %}
          {% endform %}
        </div>
      </div>
    </div>

    <div class="footer__bottom">
      <div class="footer__bottom-content">
        <div class="footer__copyright">
          <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'general.footer.all_rights_reserved' | t }}</p>
        </div>
        
        <div class="footer__payment-icons">
          {% if settings.payment_type_visa %}
            {% render 'icon-visa' %}
          {% endif %}
          {% if settings.payment_type_mastercard %}
            {% render 'icon-mastercard' %}
          {% endif %}
          {% if settings.payment_type_american_express %}
            {% render 'icon-amex' %}
          {% endif %}
          {% if settings.payment_type_paypal %}
            {% render 'icon-paypal' %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
.footer {
  background-color: var(--color-base-accent);
  color: white;
  margin-top: auto;
}

.footer__heading {
  font-size: 1.125rem;
  margin-bottom: 1rem;
  color: white;
}

.footer__text {
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 1rem;
  line-height: 1.6;
}

.footer__list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer__list-item {
  margin-bottom: 0.5rem;
}

.footer__link {
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  transition: var(--animation-default);
}

.footer__link:hover {
  color: var(--color-primary);
}

.footer__social {
  display: flex;
  gap: 1rem;
  margin-top: 1rem;
}

.footer__social-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  color: white;
  transition: var(--animation-default);
}

.footer__social-link:hover {
  background: var(--color-primary);
  color: white;
}

.footer__newsletter-form {
  margin-top: 1rem;
}

.footer__newsletter-input-wrapper {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.footer__newsletter-input {
  flex: 1;
  padding: 12px;
  border: var(--border-width) solid rgba(255, 255, 255, 0.2);
  border-radius: var(--border-radius);
  background: rgba(255, 255, 255, 0.1);
  color: white;
  font-family: inherit;
}

.footer__newsletter-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.footer__newsletter-input:focus {
  outline: none;
  border-color: var(--color-primary);
}

.footer__newsletter-submit {
  white-space: nowrap;
}

.footer__newsletter-success {
  color: var(--color-primary);
  font-weight: var(--font-body-weight-bold);
}

.footer__newsletter-error {
  color: var(--color-accent);
  font-size: 0.875rem;
}

.footer__bottom {
  border-top: var(--border-width) solid rgba(255, 255, 255, 0.1);
  margin-top: 2rem;
  padding-top: 2rem;
}

.footer__bottom-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.footer__copyright p {
  margin: 0;
  color: rgba(255, 255, 255, 0.6);
  font-size: 0.875rem;
}

.footer__payment-icons {
  display: flex;
  gap: 0.5rem;
}

@media screen and (max-width: 767px) {
  .footer__newsletter-input-wrapper {
    flex-direction: column;
  }
  
  .footer__bottom-content {
    flex-direction: column;
    gap: 1rem;
    text-align: center;
  }
}
</style>

