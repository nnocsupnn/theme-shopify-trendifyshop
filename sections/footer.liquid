    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social media icons",
      "default": true
    },
    {
      "type": "header",
      "content": "Menu Links"
    },
    {
      "type": "text",
      "id": "heading_2",
      "label": "Quick Links Heading",
      "default": "Quick Links"
    },
    {
      "type": "link_list",
      "id": "footer_menu_1",
      "label": "Quick Links Menu"
    },
    {
      "type": "text",
      "id": "heading_3",
      "label": "Customer Service Heading",
      "default": "Customer Service"
    },
    {
      "type": "link_list",
      "id": "footer_menu_2",
      "label": "Customer Service Menu"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "text",
      "id": "heading_4",
      "label": "Newsletter Heading",
      "default": "Stay Updated"
    },
    {
      "type": "richtext",
      "id": "newsletter_text",
      "label": "Newsletter Text",
